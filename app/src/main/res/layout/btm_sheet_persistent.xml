<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_layout_cart"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    app:behavior_hideable="true"
    android:clickable="true"
    android:background="@drawable/cart_bottom_navigation"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:id="@+id/view_cart_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/cart_bottom_navigation"
        android:padding="5dp">

        <TextView
            android:id="@+id/cart_no_of_items_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:text="7 items | 130"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="VIEWCART"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/ic_cart"/>



        </LinearLayout>



</LinearLayout>