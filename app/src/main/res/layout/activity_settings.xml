<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".ui.settings.SettingsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="82.00dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5.00dp"
            android:layout_marginTop="10.00dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_marginBottom="3.00dp"
                    android:layout_marginStart="10.00dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Account Name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14.00sp"/>

                <TextView
                    android:id="@+id/edit_name_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingEnd="8dp"
                    android:text="EDIT"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/googleRedColor"
                    android:gravity="end"
                    android:textSize="13sp" />
            </LinearLayout>

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="10.00dp"
                    android:text="Phone"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="10.00dp"
                    android:text="Email"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_change_campus_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:hint="Your campus"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.00dp"
                android:layout_marginBottom="3.00dp"
                android:layout_marginStart="10.00dp"
                android:fontFamily="@font/poppins_medium"
                android:text="About Us"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14.00sp" />
            <TextView
                android:id="@+id/supportTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Customer Support"
                android:textColor="@color/colorAccentText"
                android:drawableEnd="@drawable/ic_baseline_fiber_new_24"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />
            <TextView
                android:id="@+id/helpCenterTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Help Center"
                android:textColor="@color/colorAccentText"
                android:drawableEnd="@drawable/ic_baseline_fiber_new_24"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />

            <TextView
                android:id="@+id/mailUsTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="5.00dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Mail us"
                android:textColor="@color/colorAccentText"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />
            <TextView
                android:id="@+id/websiteTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="5.00dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Website"
                android:textColor="@color/colorAccentText"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />
            <TextView
                android:id="@+id/suggestionsTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="5.00dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Suggestions"
                android:textColor="@color/colorAccentText"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />
            <TextView
                android:id="@+id/inviteTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="5.00dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Invite friends"
                android:textColor="@color/colorAccentText"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />

            <TextView
                android:id="@+id/rateTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="5.00dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Rate onCampus"
                android:textColor="@color/colorAccentText"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />

            <TextView
                android:id="@+id/privacyTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="5.00dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Privacy"
                android:textColor="@color/colorAccentText"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />
            <TextView
                android:id="@+id/logoutTV"
                android:layout_width="match_parent"
                android:layout_height="40.00dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="5.00dp"
                android:fontFamily="@font/poppins_medium"
                android:singleLine="true"
                android:text="Logout"
                android:textColor="@color/colorAccentText"
                android:textSize="13.00sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10.00dp"
                android:layout_marginEnd="15.00dp"
                android:background="@color/divider_line_color" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/bgIV"
        android:layout_width="match_parent"
        android:layout_height="82.00dp"
        android:background="@drawable/tool_bar_curve"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="82.00dp">


        <ImageView
            android:id="@+id/backIV"
            android:layout_width="35.00dp"
            android:layout_height="35.00dp"
            app:srcCompat="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="22.00dp"
            />

        <TextView
            android:id="@+id/title1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="#ffffff"
            android:textSize="16.00sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans_bold"
            android:layout_toRightOf="@+id/backIV"
            android:layout_marginStart="12.00dp" />

    </RelativeLayout>


</RelativeLayout>